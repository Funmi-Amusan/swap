generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Swap {
  id            String       @id @default(cuid())
  tradeInPhone  Json
  newPhone      Json
  tradeInValue  Float
  newPhonePrice Float
  amountToPay   Float
  createdAt     DateTime     @default(now())
  appointment   Appointment?
}

model Appointment {
  id              String   @id @default(cuid())
  swapId          String   @unique
  appointmentType String
  date            DateTime
  time            String
  contactName     String?
  contactPhone    String?
  contactEmail    String?
  createdAt       DateTime @default(now())
  swap            Swap     @relation(fields: [swapId], references: [id])
}

model Account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  isAdmin       Boolean   @default(false)
  Account       Account[]
  Session       Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Admin Configuration Models
model PhoneModel {
  id        String   @id @default(cuid())
  label     String // e.g., "iPhone 15 Pro 256GB"
  value     String   @unique // e.g., "15pro-256"
  model     String // e.g., "iPhone 15 Pro"
  storage   String // e.g., "256GB"
  basePrice Float // Base price for this model
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PhoneCondition {
  id            String   @id @default(cuid())
  label         String // e.g., "Like New"
  value         String   @unique // e.g., "like-new"
  description   String? // e.g., "No visible damage"
  priceModifier Float    @default(1.0) // 1.0 = no change, 0.8 = 20% discount
  isActive      Boolean  @default(true)
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model PricingRule {
  id              String   @id @default(cuid())
  name            String
  description     String?
  baseModel       String // which phone model(s) this applies to
  condition       String? // which condition(s) this applies to
  priceAdjustment Float // +/- amount or percentage
  isPercentage    Boolean  @default(false)
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Multi-factor condition attributes for granular pricing
model ConditionAttributeGroup {
  id          String                     @id @default(cuid())
  key         String                     @unique // e.g., "battery", "faceid", "screen", "backglass", "body", "sim"
  label       String // Human-friendly label for UI sections
  description String?
  isActive    Boolean                    @default(true)
  order       Int                        @default(0)
  createdAt   DateTime                   @default(now())
  updatedAt   DateTime                   @updatedAt
  options     ConditionAttributeOption[]
}

model ConditionAttributeOption {
  id            String                  @id @default(cuid())
  groupId       String
  group         ConditionAttributeGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  value         String // e.g., "90+", "not-working"
  label         String // e.g., "90% and above", "No Face ID"
  description   String?
  priceModifier Float                   @default(1.0)
  isActive      Boolean                 @default(true)
  order         Int                     @default(0)
  createdAt     DateTime                @default(now())
  updatedAt     DateTime                @updatedAt

  @@unique([groupId, value])
}
